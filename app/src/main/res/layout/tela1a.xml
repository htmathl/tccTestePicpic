<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/waves" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="354dp"
        android:layout_height="659dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@drawable/bg_copo" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="151dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text="Junho                                                                                                                                       2020"
        android:textColor="#070707"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.116" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="346dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <TextView
            android:id="@+id/txtdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Dom"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtseg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Seg"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ter"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Qua"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Qui"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtsex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sex"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtsab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sab"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="346dp"
        android:layout_height="83dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbdom"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia"
                android:gravity="center"
                android:paddingLeft="5dp" />

            <RadioButton
                android:id="@+id/rdbseg"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rdbter"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia" />

            <RadioButton
                android:id="@+id/rdbqua"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia" />

            <RadioButton
                android:id="@+id/rdbqui"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia" />

            <RadioButton
                android:id="@+id/rdbsex"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia" />

            <RadioButton
                android:id="@+id/rdbsab"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/quadradinho_dia" />

        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="315dp"
        android:layout_height="101dp"
        android:background="@drawable/bg_copo"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/imageView13">

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_check_24" />

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Exercícios"
                android:textColor="#574290"
                android:textSize="32sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="29dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#574290"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/radioButton9"
                        android:layout_width="29dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#574290"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/radioButton8"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="#574290"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/radioButton10"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="#574290"
                        android:checked="true"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/radioButton7"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="#574290"
                        android:text="RadioButton" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btnGo"
            android:layout_width="6dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"
            android:foregroundGravity="center"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtHorario"
        android:layout_width="346dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="Horário "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deslize daqui para baixo para sair"
        android:textColor="@color/corPrincipal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>